.profile-head {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #c61929;
  border-bottom: 1rpx solid #d9d9d9;
  padding-bottom: 30rpx;
}

.profile-icon {
  margin-right: 5px;
  vertical-align: middle;
  width: 22px;
  height: 22px;
}

.info-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  background-color: #fff;
}

.info-detail {
  height: 38px;
}

.info-nickname {
  display: inline-block;
  color: #fff;
  border: 2rpx solid transparent;
  line-height: 2.3;
  font-size: 13px;
  padding: 0 1.34em;
}

.info-reauth {
  color: #c61929;
  background-color: #fff;
  border: 2rpx solid #fff;
  border-radius: 5px;
  padding: 3rpx 6rpx;
  margin-top: 0;
}

.info-reauth::after {
  border: none;
}

.profile-menu {
  background-color: #fff;
  margin-top: 28rpx;
}

.menu-item {
  padding-top: 22px;
  padding-bottom: 22px;
  padding-left: 18px;
}

.weui-cell__bd {
  padding-left: 10px;
}

.weui-cell__ft {
  font-size: 13px;
}
